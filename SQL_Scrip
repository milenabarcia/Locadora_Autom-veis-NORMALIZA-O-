CREATE VIEW View_Locacoes_Clientes_Veiculos AS
SELECT 
    L.LocacaoID,
    C.Nome AS Cliente,
    V.Modelo AS Veiculo,
    V.Cor,
    V.Placa,
    L.Dias,
    L.Total
FROM 
    Locacoes L
JOIN 
    Clientes C ON L.ClienteID = C.ClienteID
JOIN 
    Veiculos V ON L.VeiculoID = V.VeiculoID;
    
    SELECT * FROM View_Locacoes_Clientes_Veiculos;
